<%- include('header') %> 

    <div class="box" id="heading">
        <h1><%= listTitles %> </h1>
    </div>

    <div class="box">
        <% newLists.forEach((item) => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkBox" value= <%= item._id %>  onChange="this.form.submit()">
                    <p> <%= item.name %>  </p>
                </div>
                <input type="hidden" name="listName" value= <%= listTitles %>></input>
            </form>
        <% }) %> 


        <form class="item" action="/" method="post">
            <input type="text" name="newLists" placeholder="New List" autofocus autocomplete="off">
            <button type="submit" name="list" value=<%= listTitles %>>+</button>
        </form>
    </div>

<%- include('footer') %> 